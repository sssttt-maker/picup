<% if logged_in? %>

  <p>ログイン完了ユーザ: 
<%= current_user.name %>
</p>

<h1><%= link_to '投稿', new_post_path %></h1>
<div>
  <%= render 'posts/posts', posts: @posts %> 
</div>
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the PicUp</h1>
      
<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>

    </div>
  </div>
<% end %>